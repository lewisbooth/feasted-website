include navigation
include contactForm
include mailingList
include socialMedia
include instaFeed
include footer

doctype html
html
  head
    block title
      title Feasted | Private Catering, Food Consulting and Education
      meta(name="description" content="Private dining, corporate booking and takeaways like you have never experienced before. We are consultants for education providers and restaurants, offering up our knowledge and skills to shape your business.")
      
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="theme-color" content="#111111")

    //- Minimal favicon setup, covers most bases. Remember to change /favicon.ico too
    link(rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="96x96" href="/images/favicon/favicon-96x96.png")
    link(rel="apple-touch-icon-precomposed" sizes="152x152" href="/images/favicon/apple-icon-152x152.png")
    meta(name="msapplication-TileColor" content="#353535")
    meta(name="msapplication-TileImage" content="/ms-icon-144x144.png")

    //- Preload fonts & other assets that are linked from CSS here (such as background images), rather than wait for the browser to download and parse the CSS and request them. Much faster page loading speed in supported browsers.
    link(rel='preload' href='/fonts/montserrat-bold-webfont.woff2' as='font' type="font/woff2" crossorigin)
    link(rel='preload' href='/fonts/ttrounds-bold-webfont.woff2' as='font' type="font/woff2" crossorigin)
    link(rel='preload' href='/fonts/ttrounds-regular-webfont.woff2' as='font' type="font/woff2" crossorigin)

    //- Block for additional preloads that are specific to individual pages
    block pagePreloads
    
    //- Inline styles in production (change in gulpfile.js), remove this if CSS is over 40kb
    if production
      style
        include ../../../dist/css/style.css
    else
      link(rel='stylesheet' href='/css/style.css' type="text/css")
      
 
  body
    .white-background
      block nav
        +navigation

      block content

      block instaFeed
        +instaFeed

    block footer
      footer

        +footer

        block commonScripts
          script
            include ../../../dist/js/dollarSelect.js
            include ../../../dist/js/mobileMenu.js
            include ../../../dist/js/scroll.js
            include ../../../dist/js/mailingList.js
            include ../../../dist/js/contactForm.js
            include ../../../dist/js/lib/instaFeed.min.js
            include ../../../dist/js/instaFeed.js

        //- Extra scripts for individual pages
        block pageScripts