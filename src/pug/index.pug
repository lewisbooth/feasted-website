extends _partials/layout

block pagePreloads
  style
    include ../../dist/css/lib/swiper.min.css

block pageScripts
  script
    include ../../dist/js/lib/swiper.min.js
  script
    include ../../dist/js/swiper-init.js

block content
  .container
    h1 This is Feasted.
    .split-container
      .split
        h3  Home of #[a(href="/dining/once-upon-a-plate") dining], #[a(href="/education/stoke-on-trent-college") education] and #[a(href="/education/feast-consultants") food consultancy], our mission is to create food that tells a story through everything we do. 
      .split
        p We are passionate about sourcing ingredients, sustainability, amazing combinations and bringing gastronomy to the masses. 
        p Join our journey, learn with us and grow with us. 
        p You’re all welcome here.
        a.button(href='/about') About Us
        a.button.button-primary.scroll(href='#dining') Our Packages
  .swiper-container
    .swiper-wrapper
      .swiper-slide.swiper-slide-active
        picture
          source(media='(min-width:767px)' srcset='/images/slider/1.webp' type='image/webp')
          source(media='(min-width:767px)' srcset='/images/slider/1.jpg' type='image/jpeg')
          source(media='(min-width:10px)' srcset='/images/slider/1-mobile.webp' type='image/webp')
          source(media='(min-width:10px)' srcset='/images/slider/1-mobile.jpg' type='image/jpeg')
          img(src='/images/slider/1.jpg')
      .swiper-slide
        picture
          source(media='(min-width:767px)' srcset='/images/slider/2.webp' type='image/webp')
          source(media='(min-width:767px)' srcset='/images/slider/2.jpg' type='image/jpeg')
          source(media='(min-width:10px)' srcset='/images/slider/2-mobile.webp' type='image/webp')
          source(media='(min-width:10px)' srcset='/images/slider/2-mobile.jpg' type='image/jpeg')
          img(src='/images/slider/2.jpg')
      .swiper-slide
        picture
          source(media='(min-width:767px)' srcset='/images/slider/3.webp' type='image/webp')
          source(media='(min-width:767px)' srcset='/images/slider/3.jpg' type='image/jpeg')
          source(media='(min-width:10px)' srcset='/images/slider/3-mobile.webp' type='image/webp')
          source(media='(min-width:10px)' srcset='/images/slider/3-mobile.jpg' type='image/jpeg')
          img(src='/images/slider/3.jpg')
      .swiper-slide
        picture
          source(media='(min-width:767px)' srcset='/images/slider/4.webp' type='image/webp')
          source(media='(min-width:767px)' srcset='/images/slider/4.jpg' type='image/jpeg')
          source(media='(min-width:10px)' srcset='/images/slider/4-mobile.webp' type='image/webp')
          source(media='(min-width:10px)' srcset='/images/slider/4-mobile.jpg' type='image/jpeg')
          img(src='/images/slider/4.jpg')
      .swiper-slide
        picture
          source(media='(min-width:767px)' srcset='/images/slider/5.webp' type='image/webp')
          source(media='(min-width:767px)' srcset='/images/slider/5.jpg' type='image/jpeg')
