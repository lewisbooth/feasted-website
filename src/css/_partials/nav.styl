nav 
  width 100%
  margin-bottom 7rem
  z-index 1
  position relative

  .container
    display flex
    justify-content space-between
    align-items flex-end
    flex-wrap wrap
    padding-top 4.2rem
    background-color white

  .nav

    &-logo
      width 12rem
      height 8.655rem

    &-menu
      display flex
      align-items center
      justify-content right
      padding-bottom 1.6rem
      
      &-toggle
        display none
        align-items center
        margin 1.25rem 0
        padding 1.25rem 1.5rem
        border 1px solid $richBlack
        user-select none
        font-family $ttRoundsBold
        text-transform uppercase

        &:hover
          cursor pointer

        &-icon
          display flex
          flex-direction column
          margin-left 1.5rem

          &-bar
            height 2px
            background-color $richBlack
            width 2rem
            margin 0.3rem 0
            transition all .3s

      li
        a
          padding 0 1.8rem
          display block
          color $richBlack
          text-decoration none
          user-select none
          font-family $ttRoundsLight
          -webkit-text-stroke: 0.2px rgba(0, 0, 0, .5)
          letter-spacing .5px
          font-size 1.8rem

          &:hover
            text-decoration underline

@media(max-width: $breakpointSmall)
  nav 

    .nav

      &-menu
        position absolute
        flex-direction column
        width 100vw
        margin 0
        top 100%
        left 0
        background-color white
        border-bottom 2px solid $midGrey
        transform translateY(-100% - 30px)
        z-index -1
        transition transform .3s
        will-change transform
        padding-bottom 1rem

        & li a
          width 100vw
          padding 2rem 0
          text-align center
          font-size 2rem

          &:hover
            background $primaryColor
            text-decoration none
            color white

        &-toggle
          display flex

    &.active

      .nav-menu
        transform translateY(50px)

      .nav-menu-toggle-icon-bar
        &:first-child
          transform translateY(7px) rotate(45deg)
        &:nth-child(2)
          opacity 0
        &:last-child
          transform translateY(-7px) rotate(-45deg)