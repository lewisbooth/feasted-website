.button
  display inline-block
  font-family $farmNewMedium
  font-size 1.4rem
  line-height 1
  letter-spacing 0.2rem
  text-transform uppercase
  border 2px solid $midGrey
  border-radius 5px
  color $darkGrey
  padding 1.2rem 3rem
  box-sizing content-box
  text-decoration none
  margin 1rem 2.5rem 2.4rem 0

  &:hover
    border-color $darkGrey
    color $darkGrey
    cursor pointer

  &:visited
    color $darkGrey

  &-primary
    background-color $primaryColor
    border-color $primaryColor
    color white

    &:hover
      background-color $primaryColorAccent
      border-color $primaryColorAccent
      color white

    &:visited
      color white

  &-small
    font-size 1.1rem
    padding .75rem 2rem